{
  "compilerOptions": {
    "target": "es5",                      
    "module": "commonjs",
    "allowJs": true,                       
    "checkJs": true, 
    "jsx": "react",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "paths": {
      "components/*": [
        "components/*"
      ]
    },
    "plugins": [
      { 
        "name": "typescript-plugin-css-modules", 
        "options": {
            "customMatcher": "\\.(c|le||lle|sa|sc)ss$"
        } 
      }
    ]
  },
  "include": ["./typings/*","./src/**/*"],
  "exclude": ["./src/**/__tests__"]
}